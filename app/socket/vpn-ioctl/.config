DEVARCH=white

VERSION=1
PATCHLEVEL=0
SUBLEVEL=2

MAKEVERSION="\"$(shell make --version | grep -R "Make")"\"
CCVERSION="\"$(shell ${CC} --version | grep -R "${CC}")"\"
USERNAME="\"$(shell whoami)"\"

APP_VERSION:=-DVERSION=${VERSION} 
APP_VERSION+=-DPATCHLEVEL=${PATCHLEVEL} 
APP_VERSION+=-DSUBLEVEL=${SUBLEVEL}  
APP_VERSION+=-DMAKEVERSION=${MAKEVERSION}
APP_VERSION+=-DCCVERSION=${CCVERSION} 
APP_VERSION+=-DUSERNAME=${USERNAME} 

ifeq (${DEVARCH},white)
DEVARCHFLAGS+=-DWHITE=1 -DDEVARCH=\"white\"
else 
ifeq (${DEVARCH},sec)
DEVARCHFLAGS+=-DSEC=1 -DDEVARCH=\"sec\"
else
DEVARCHFLAGS+=-DUSEC=1 -DDEVARCH=\"usec\"
endif

endif


export DEVARCHFLAGS
export DEVARCH
export APP_VERSION
export CC


